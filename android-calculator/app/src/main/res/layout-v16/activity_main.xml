<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:gravity="right|center"
        android:textSize="55sp"
        android:id="@+id/DataDisplay"
        android:fontFamily="@font/sf_pro_light"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/dark"
        android:textColor="@color/black"/>
    <TextView
        android:gravity="right|top"
        android:textSize="35sp"
        android:id="@+id/OpDisplay"
        android:fontFamily="@font/sf_pro_medium"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark"
        android:textColor="@color/black"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/sf_pro_ultralight"
                android:lines="2"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="40sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="รท"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/op_custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/multiplication"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ร"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/op_custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/subtraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/op_custom_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/addition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="50sp"
                android:fontFamily="@font/sf_pro_ultralight"
                android:background="@drawable/op_custom_button"
                android:textColor="@android:color/white"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CLR"
            android:textSize="35sp"
            android:fontFamily="@font/sf_pro_light"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="35sp"
            android:fontFamily="@font/sf_pro_light"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="="
            android:textSize="50sp"
            android:fontFamily="@font/sf_pro_light"
            android:background="@drawable/eq_custom_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>
